<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#1D82E3"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#0085FF"
                android:endColor="#003465"
                android:angle="0"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>
</selector>
